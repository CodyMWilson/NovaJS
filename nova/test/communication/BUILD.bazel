package(default_visibility = ["//visibility:public"])

load("@npm_bazel_jasmine//:index.bzl", "jasmine_node_test")
load("@npm_bazel_typescript//:index.bzl", "ts_library")
load("@novajs//:mocha_ts_test.bzl", "mocha_ts_test")
load("@novajs//:bundlers.bzl", "web_bundle", "node_bundle")

jasmine_node_test(
    name = "unit_tests",
    srcs = [":unit_test_sources"]
)

ts_library(
    name = "test_utils",
    testonly = True,
    srcs = [
        "test_utils.ts",
    ],
    deps = [
        "//nova/src/proto:nova_service_ts_proto",
    ]
)

ts_library(
    name = "unit_test_sources",
    testonly = True,
    # All tests must end in "_test.ts" or jasmine won't recognize them!
    srcs = [
        "SocketChannelServer_test.ts",
     ],
    deps = [
        ":test_utils",
        "//nova/src/communication:communication_server_lib",
        "@npm//@types/node",
        "@npm//typescript",
        "@npm//uuid",
        "@npm//@types/uuid",
        "@npm//rxjs",
        "@npm//ws",
        "@npm//@types/ws",
        "@npm//jasmine",
        "@npm//@types/jasmine",
        "//nova/src/proto:nova_service_ts_proto",
        "//nova/src/proto:engine_state_ts_proto",
    ]
)
