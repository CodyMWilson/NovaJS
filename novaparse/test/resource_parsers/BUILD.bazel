package(default_visibility = ["//visibility:public"])

load("@npm_bazel_typescript//:index.bzl", "ts_library")
load("@novajs//:mocha_ts_test.bzl", "mocha_ts_test")
load("@npm_bazel_jasmine//:index.bzl", "jasmine_node_test")

ts_library(
    name = "test_utils",
    srcs = [
        "PNGCompare.ts",
        "DefaultIDSpace.ts",
    ],
    deps = [
        "@npm//@types/node",
        "@npm//pngjs",
        "@npm//@types/pngjs",
        "@npm//jasmine",
        "@npm//@types/jasmine",
        "//novaparse/src/resource_parsers",
    ]
)

ts_library(
    name = "unit_test_sources",
    testonly = True,
    # All tests must end in "_test.ts" or jasmine won't recognize them!
    srcs = [
        "BoomResource_test.ts",
        "DescResource_test.ts",
        "OutfResource_test.ts",
        "PictResource_test.ts",
        "RledResource_test.ts",
        "ShanResource_test.ts",
        "ShipResource_test.ts",
        "SpinResource_test.ts",
        "SpobResource_test.ts",
        "SystResource_test.ts",
        "WeapResource_test.ts",
    ],
    deps = [
        "//novaparse/src/resource_parsers",
        "@npm//@types/node",
        "@npm//typescript",
        "@npm//pngjs",
        "@npm//@types/pngjs",
        "@npm//uuid",
        "@npm//@types/uuid",
        "@npm//rxjs",
        "@npm//jasmine",
        "@npm//@types/jasmine",
        "@npm//resourceforkjs",
        ":test_utils",
    ]
)

jasmine_node_test(
    name = "unit_tests",
    srcs = [":unit_test_sources"],
    data = [
        "//novaparse/test/resource_parsers/files",
    ]
)
