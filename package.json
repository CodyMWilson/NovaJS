{
  "name": "novadatainterface",
  "version": "0.0.4",
  "description": "An interface for game data for NovaJS",
  "main": "index.js",
  "scripts": {
    "test": "mocha -r ts-node/register -O tsconfig.json --recursive test/**/*.ts test/**/**/*.ts",
    "build": "npm run build-only; npm run move",
    "build-only": "tsc --declaration --outDir ./",
    "move": "mv src/*.d.ts .; mv src/*.js .",
    "clean": "rm ./*.d.ts; rm ./*.js"
  },
  "author": "Matthew Soulanille",
  "license": "MIT",
  "dependencies": {
    "typescript": "^3.1.6"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.5",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.2.0",
    "ts-node": "^7.0.1"
  }
}
